        </com.waracle.motd2016.actions.GoneToVisibleAction>

        <com.waracle.motd2016.actions.GoneToVisibleAction
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:tag="ACTION_4">

            <TextView
                style="@style/Widget.Leanback.Row.Header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Mastercard testing for security"
