            android:paddingTop="20dp"
            android:tag="ACTION_1">

            <TextView
                style="@style/Widget.Leanback.Row.Header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Approved safe in Germany"
                />

        </com.waracle.motd2016.actions.GoneToVisibleAction>

        <com.waracle.motd2016.actions.GoneToVisibleAction
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:tag="ACTION_2">

            <TextView
                style="@style/Widget.Leanback.Row.Header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
